<Window x:Class="inkCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inkCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="buttSave" Margin="10,10" Click="buttSave_Click">Save</Button>
            <Button x:Name="buttOpen" Margin="10,10" Click="buttOpen_Click">Open</Button>
            <Button x:Name="buttClear" Margin="10,10" Click="buttClear_Click">Clear</Button>

            <RadioButton x:Name="rbuttRed" Margin="8,10" Checked="rbuttRed_Checked">Red</RadioButton>
            <RadioButton x:Name="rbuttGreen" Margin="8,10" Checked="rbuttGreen_Checked">Green</RadioButton>
            <RadioButton x:Name="rbuttBlue" Margin="8,10" Checked="rbuttBlue_Checked">Blue</RadioButton>
            <RadioButton x:Name="rbuttBlack" Margin="8,10" Checked="rbuttBlack_Checked">Black</RadioButton>
        </StackPanel>
        <InkCanvas x:Name="theInkCanvas"/>
        <Button x:Name="buttColorSelect" Width="20" Height="20" Margin="10,10,10,10" Background="Black"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label x:Name="lblRed" Content="Red" Margin="10,10,10,10" Width="70"/>
            <ScrollBar x:Name="scrollBarRed" Orientation="Horizontal"/>
        </StackPanel>

    </StackPanel>

</Window>
